{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES2022",
		"jsx": "preserve",
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"inlineSources": true,
		"sourceRoot": "/",
		"noImplicitAny": true
	},
	"include": ["src/components", "custom.d.ts", "src"],
	"exclude": ["node_modules", "dist", "**/*.stories.tsx", "src/stories"]
}
