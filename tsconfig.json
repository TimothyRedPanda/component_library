{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES2022",
		"jsx": "preserve",
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "**/*.stories.tsx", "src/stories"]
}
